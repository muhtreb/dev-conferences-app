{% extends 'layouts/base.html.twig' %}

{% block body %}
    <section class="mt-16 mb-24 flex flex-col justify-center items-center">
        <div class="max-w-4xl">
            <h1 class="text-4xl font-bold text-center mb-8">
                {{ 'home.banner.title'|trans }}
            </h1>
            <p class="presentation__content text-xl text-center">
                {{ 'home.banner.content'|trans }}
            </p>
        </div>
    </section>

    <section class="mb-24">
        <h2 class="font-bold text-3xl mb-8 text-center">{{ 'home.latest_editions.title'|trans }}</h2>
        <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            {% for edition in editions %}
                <li class="flex">
                    <twig:EditionCard
                        edition="{{ edition }}"
                        url="{{ url('edition_show', { slug: edition.slug }) }}"
                        showThumbnail
                    />
                </li>
            {% endfor %}
        </ul>
        <div class="mt-4 flex items-center justify-center w-full">
            <twig:Button tag="a" href="{{ path('edition_list') }}">
                {{ 'home.latest_editions.button'|trans }}
            </twig:Button>
        </div>
    </section>

    <section class="mb-16">
        <h2 class="font-bold text-3xl mb-8 text-center">{{ 'home.most_popular_speakers.title'|trans }}</h2>
        <ul class="grid grid-cols-2 md:grid-cols-4 xl:grid-cols-6 gap-4">
            {% for speaker in topSpeakers %}
                <li class="flex">
                    <twig:SpeakerCard speaker="{{ speaker }}" url="{{ url('speaker_show', { slug: speaker.slug }) }}"/>
                </li>
            {% endfor %}
        </ul>
        <div class="mt-4 flex items-center justify-center w-full">
            <twig:Button tag="a" href="{{ path('speaker_list') }}">
                {{ 'home.most_popular_speakers.button'|trans }}
            </twig:Button>
        </div>
    </section>
{% endblock %}
