{% extends 'base.html.twig' %}

{% block metaTitle 'talks.list.title'|trans %}

{% block body %}
    <twig:Breadcrumb items="{{ breadcrumbItems }}" />

    <h1 class="font-bold text-2xl mb-4 mt-4 text-center">{{ 'talks.list.title'|trans }}</h1>

    <twig:SearchForm placeholder="Rechercher une confÃ©rence" />

    <ul class="grid sm:grid-cols-3 lg:grid-cols-4 gap-4">
        {% for talk in talks %}
            <li class="flex">
                <twig:TalkCard talk="{{ talk }}" url="{{ path('talk_show', { 'slug': talk.slug }) }}"/>
            </li>
        {% endfor %}
    </ul>

    <twig:MetaPagination meta="{{ meta }}" />
{% endblock %}
