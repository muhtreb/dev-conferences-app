{% extends 'layouts/base.html.twig' %}

{% block title 'login.title'|trans %}

{% block body %}
    <h1 class="text-3xl font-bold text-center mb-16">
        {{ 'login.title'|trans }}
    </h1>

    <div class="flex flex-col items-center">
        <h2 class="text-2xl font-bold mb-4">
            {{ 'login.oauth.title'|trans }}
        </h2>
        <div class="flex flex-col items-center mb-16">
            <!-- Github login link button -->
            <a
                href="{{ path('hwi_oauth_service_redirect', {'service': 'github' }) }}"
                class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded flex items-center justify-center mb-4"
            >
                <i class="fab fa-github mr-2 fa-lg"></i>
                {{ 'login.oauth.github_button'|trans }}
            </a>
        </div>
        <h2 class="text-2xl font-bold mb-4">
            {{ 'login.email_link.title'|trans }}
        </h2>
        <form action="{{ path('security_login') }}" method="POST" class="max-w-2xl flex flex-col items-center">
            <p class="text-center mb-8">{{ 'login.email_link.description'|trans }}</p>
            <div class="max-w-md flex flex-col items-center w-full">
                <div class="flex flex-col mb-4 w-full">
                    {{ form_label(form.email, 'login.email.label', {
                        label_attr: {
                            'class': 'mb-2'
                        }
                    }) }}
                    {{ form_widget(form.email, {
                        attr: {
                            'class': 'border border-gray-300 rounded-md p-2 text-gray-800 w-full'
                        }
                    }) }}
                </div>
                <div class="flex flex-col mb-4 w-full">
                    <button
                        type="submit"
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                    >
                        {{ 'login.send_magic_link'|trans }}
                    </button>
                </div>
            </div>
            {{ form_rest(form) }}
        </form>
    </div>

{% endblock %}
