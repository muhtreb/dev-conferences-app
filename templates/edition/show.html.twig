{% extends 'layouts/base.html.twig' %}

{% block metaTitle edition.name %}

{% block body %}
    <twig:Breadcrumb items="{{ breadcrumbItems }}" />

    <div class="flex flex-col items-center">
        <div class="flex items-center mt-4 mb-2">
            <h1 class="font-bold text-2xl text-center">{{ edition.name }}</h1>
        </div>

        {% if edition.conference.thumbnailImageUrl %}
            <div class="relative w-48 h-48 border-2 mb-4">
                {% if app.user %}
                    <div class="absolute top-3 left-3">
                        <twig:Like type="edition" id="{{ edition.id }}" name="{{ edition.name }}" />
                    </div>
                {% endif %}
                <img
                        src="{{ edition.conference.thumbnailImageUrl }}"
                        alt="{{ edition.conference.name }}"
                        class="w-full h-full object-cover"
                />
            </div>
        {% endif %}

        <span class="text-md px-4 py-2 bg-gray-800 rounded text-center mb-8">
            {{ edition|editionDate }}
        </span>

        {% if edition.talks|length > 0 %}
            <ul class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
                {% for talk in edition.talks %}
                    <li class="flex w-full">
                        <twig:TalkCard talk="{{ talk }}" url="{{ path('talk_show', { 'slug': talk.slug }) }}" :showEdition="false" />
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}
