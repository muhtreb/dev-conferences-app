<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for conference in conferences %}
        <url>
            <loc>
                {{ url('conference_show', { slug: conference.slug }) }}
            </loc>
            <lastmod>{{ 'now'|date('Y-m-d') }}</lastmod>
        </url>
    {% endfor %}
</urlset>