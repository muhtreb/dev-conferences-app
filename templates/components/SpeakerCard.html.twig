<div class="w-full flex flex-col p-4 bg-gray-700 rounded-md cursor-pointer relative hover:bg-gray-600 transition-colors duration-200 ease-in-out">
    {% if app.user %}
        <div class="absolute left-4 top-4 z-20">
            <twig:Like type="speaker" id="{{ speaker.id }}" name="{{ speaker.firstName ~ ' ' ~ speaker.lastName }}" :focusable="false" />
        </div>
    {% endif %}
    <div class="flex flex-col items-center justify-center relative">
        <div class="relative w-20 h-20 shrink-0 mb-2">
            {% if speaker.avatarUrl %}
                <img
                        src="{{ speaker.avatarUrl }}"
                        alt=""
                        class="rounded-full border-2 bg-gray-800"
                />
            {% else %}
                <div class="h-full w-full rounded-full border-2 bg-gray-800 flex items-center justify-center">
                    <i class="fa-solid fa-user fa-2xl"></i>
                </div>
            {% endif %}
        </div>
        <div>
            <h2 class="font-bold">
                <a href="{{ url }}" class="before:inset-0 before:absolute before:content-['']">
                    {{ speaker.firstName }} {{ speaker.lastName }}
                </a>
            </h2>

            {% if (speaker.githubUsername is defined and speaker.githubUsername) or (speaker.xUsername is defined and speaker.xUsername) %}
                <div class="mt-2 flex items-center justify-center relative">
                    {% if speaker.githubUsername is defined and speaker.githubUsername %}
                        <a
                                href="https://github.com/{{ speaker.githubUsername }}"
                                target="_blank"
                                rel="noreferrer"
                                class="mr-2"
                                title="{{ 'speaker.github.title'|trans({ name: speaker.firstName ~ ' ' ~ speaker.lastName }) }}"
                                tabindex="-1"
                        >
                            <i class="fa-brands fa-github fa-lg"></i>
                        </a>
                    {% endif %}
                    {% if speaker.xUsername is defined and speaker.xUsername %}
                        <a
                                href="https://twitter.com/{{ speaker.xUsername }}"
                                target="_blank"
                                rel="noreferrer"
                                title="{{ 'speaker.x.title'|trans({ name: speaker.firstName ~ ' ' ~ speaker.lastName }) }}"
                                tabindex="-1"
                        >
                            <i class="fa-brands fa-x-twitter fa-lg"></i>
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
